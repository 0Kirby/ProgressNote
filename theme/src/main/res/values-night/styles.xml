<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseDarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">#FF303030</item>
        <item name="color_view_background">#FF303030</item>
        <item name="color_windows_background">#FF000000</item>
        <item name="text_high">#85FFFFFF</item>
        <item name="text_medium">#65FFFFFF</item>
        <item name="text_hint">#45FFFFFF</item>
        <item name="text_error">#FFB00020</item>
        <item name="icon_color">#FFF5F5F5</item>
        <item name="floatingActionButtonStyle">
            @style/Widget.MaterialComponents.FloatingActionButton
        </item>
        <item name="toolbar_icon_color">#FFFEFEFE</item>
        <item name="fab_color">?attr/color_view_background</item>
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
        <item name="btn_text_color">#FFFFFFFF</item>
        <item name="android:fontFamily">@font/bamboo</item>
        <item name="m_calendar_background_color">?attr/colorPrimary</item>
        <item name="m_calendar_text_color">#FFFFFFFF</item>
        <item name="m_calendar_selected_text_color">?attr/colorPrimary</item>
        <item name="m_calendar_week_bar_text_color">#ABFFFFFF</item>
        <item name="m_calendar_selected_background_color">#fff</item>
        <item name="m_calendar_note_background_color">?attr/colorAccent</item>
        <item name="android:popupMenuStyle">@style/Widget.AppCompat.PopupWindow</item>
    </style>

    <style name="WhiteAppTheme" parent="BaseDarkTheme">
        <item name="titleTextColor">#000000</item>
        <item name="colorPrimary">@color/whiteColorPrimary</item>
        <item name="colorPrimaryDark">@color/whiteColorPrimaryDark</item>
        <item name="colorAccent">@color/whiteColorAccent</item>
        <item name="color_nav">@color/whiteColorPrimaryDark</item>
        <item name="dialog_button_color">@color/whiteColorAccent</item>
        <item name="toolbar_theme">@style/Base.Theme.AppCompat.Light</item>
        <item name="toolbar_icon_color">#FF606060</item>
        <item name="btn_text_color">#CC000000</item>
        <item name="m_calendar_background_color">?attr/colorPrimary</item>
        <item name="m_calendar_text_color">#000000</item>
        <item name="m_calendar_selected_text_color">?attr/colorPrimary</item>
        <item name="m_calendar_week_bar_text_color">?attr/text_medium</item>
        <item name="m_calendar_selected_background_color">?attr/colorAccent</item>
        <item name="m_calendar_note_background_color">#4A000000</item>
    </style>


